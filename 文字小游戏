#include<stdio.h>

int main()
{
    double jiage;                              //鲜花价格定义小数点变量double
    //打印剧情

    printf("在一个月黑风高的夜晚\n");
    printf("一个小男生用自己的零花钱给小女生买了一束鲜花\n");
    printf("小女生问小男生鲜花的价格，这花多少钱？\n");
    printf("小男生说: ");                       //请用户输入鲜花价格
    //需要一个变量，定义一下
    scanf("%lf",&jiage);                        //录入用户值
    //然后是模拟小女生的反应
    if(jiage > 100000)                          //开始 if 语句，如果鲜花价格大于10万块
    {
        printf("小女生晕倒在了你的怀里\n");       //就执行此行
    }
    else if(jiage >= 1000&&jiage < 99999)       //又或者鲜花价格大于等于1000或者小于99999
    {
        printf("小女生说:“我们明天就结婚吧”\n");  //则执行此行
    }
    else if(jiage > 100&&jiage < 999)           //又或者鲜花价格大于100小于999
    {
        printf("小女生说:“我们牵个手手吧！，明天再约”");    //则执行此行
    }
    else                                                //如果以上都不成立，是其他价格或者没有价格
    {
        printf("小女生说:“呸，穷光蛋还出来丢脸”\n");      //则执行此行
    }


  return 0;
}
