#include<stdio.h>    
 
 int main()
    
  {  ///需要一个把英寸转换为厘米的程序，需要用户输入英寸值
    //1英寸=2.54厘米                
    double x;                       //先定义一个浮点型变量x,x为最终转换后的值
    printf("一英寸等于2.54厘米,请输入转换值:\n");//打印已知条件
    scanf("%lf",&x);              //让用户输入需要转换的英寸
    x = x*2.54;                   //根据已知条件，套公式，让用户输入的值需要乘以2.54
    printf("结果为%lf厘米\n",x);  //最后，打印转换后的值//完美，今天也是精致的小猪猪
    
    return;
  }
